# Production Environment Configuration
# Copy this file to .env and adjust the values for your production environment

# IMPORTANT: Set NODE_ENV to production for optimal performance and security
NODE_ENV=production

# Server Configuration
PORT=3001

# Database Configuration (Use your production database credentials)
DB_HOST=your-production-db-host.com
DB_PORT=3306
DB_USER=unlockit_prod_user
DB_PASSWORD=your-very-secure-production-password
DB_NAME=unlockit_production

# Security Configuration (Generate strong secrets!)
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secure-jwt-secret-for-production-64-chars-long
JWT_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-super-secure-session-secret-for-production-64-chars-long
SESSION_MAX_AGE=86400000

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# Rate Limiting (Production settings)
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100   # Max 100 requests per IP per window

# OpenAI Configuration (optional for logo generation)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_ENABLED=false

# Production Performance Settings
# Uncomment and adjust as needed:
# UV_THREADPOOL_SIZE=128
# NODE_OPTIONS="--max-old-space-size=4096" 